{
  "name": "pm2-ws",
  "version": "0.2.0",
  "description": "A WebSocket server for working with PM2",
  "author": "Jody Heavener <j.heavener@gmail.com>",
  "license": "MPL-2.0",
  "repository": "https://github.com/jodyheavener/pm2-ws.git",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc && chmod +x ./lib/index.js",
    "run:dev": "yarn build && ./lib/index.js"
  },
  "bin": {
    "pm2-ws": "./lib/index.js"
  },
  "keywords": [
    "cli",
    "typescript",
    "pm2",
    "websocket"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "path": "^0.12.7",
    "pm2": "^4.5.5",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/node": "^14.14.31",
    "@types/ws": "^7.4.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
